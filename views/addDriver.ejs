<%- include('./includes/header.ejs') %>

    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">Add New Driver</h6>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <h3 class="mb-0">Add New Driver</h3>
                    </div>
                    <!-- Light table -->
                    <div class="table-responsive p-5">

                        <form action="" method="POST">


                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">Name</label>
                                    <input type="text" class="form-control" name="name"
                                        placeholder="Madhvendra Pratap Singh" required>

                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">Phone</label>
                                    <input type="number" class="form-control" name="phone" placeholder="9140327455"
                                        required>

                                </div>

                            </div>


                            <div class="form-row">
                                <div class="col-md-8 mb-6">
                                    <label for="validationCustom01">Address</label>
                                    <textarea type="text" class="form-control" name="address"
                                        placeholder="19/347 Indiranagar" required></textarea>

                                </div>


                            </div>

                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">City</label>
                                    <input type="text" class="form-control" name="city" placeholder="Lucknow" required>

                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">State</label>
                                    <input type="text" class="form-control" name="state" placeholder="Uttar Pradesh"
                                        required>

                                </div>

                            </div>





                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">Pincode</label>
                                    <input type="number" class="form-control" name="pincode" placeholder="226016"
                                        required>

                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">Password</label>
                                    <input type="password" class="form-control" name="password"
                                        placeholder="Abc@123#!#%^*((^$" required>

                                </div>

                            </div>










                            <button class="btn btn-primary" type="submit">Add Bus</button>
                        </form>



                    </div>
                    <!-- Card footer -->
                    <div class="card-footer py-4">

                    </div>
                </div>
            </div>
        </div>


    </div>







    <%- include('./includes/footer.ejs') %>